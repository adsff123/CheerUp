<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="215dp"
                android:layout_height="40dp"
                android:layout_gravity="top"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="삼성"
                android:textAlignment="textEnd"
                android:textColor="@color/Black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/CancelBtn"
                android:layout_width="99dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/textView2"
                android:layout_marginEnd="14dp"
                android:gravity="center"
                android:text="취소"
                android:textAlignment="center"
                android:textColor="@color/DimGray"
                android:textSize="25dp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/blackline" />

        <RadioGroup
            android:id="@+id/toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/pink_out_line"
            android:checkedButton="@+id/Jaga"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Insa"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_widget_background"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="인사캠"
                android:textColor="#FFFFFFFF" />

            <RadioButton
                android:id="@+id/Jaga"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_widget_background"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="자과캠"
                android:textColor="#FFFFFFFF" />
        </RadioGroup>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/finished_Insa"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>

            <ListView
                android:id="@+id/finished_Jaga"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible" />

        </FrameLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/searchMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="#77000000"
        android:orientation="horizontal"
        android:visibility="invisible">

        <EditText
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/CompanySearch"
            android:layout_marginEnd="9dp"
            android:layout_toStartOf="@+id/CompanySearch"
            android:contextClickable="false"
            android:cursorVisible="false"
            android:hint="검색어를 입력하세요"
            android:inputType="text"
            android:linksClickable="false"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#FFFFFFFF" />

        <Button
            android:id="@+id/CompanySearch"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="20dp"
            android:background="#FFFFFFFF"
            android:text="검색"
            android:textSize="20dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CompanySearch"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:columnCount="3"
            android:orientation="horizontal"
            android:rowCount="6"
            android:useDefaultMargins="true">

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_row="0"
                android:text="전체선택"
                android:textColor="#FFFFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="금융"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="IT"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="미디어"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="무역"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="생산·제조"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="서비스"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="유통"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="보험"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="건설"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="통신"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="외국계"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="기타"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/CompanyFilter"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_marginBottom="20dp"
                android:layout_row="5"
                android:background="#FFFFFFFF"
                android:text="검색"
                android:textSize="20dp" />
        </GridLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/CategoryMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#77000000"
        android:orientation="vertical"
        android:visibility="invisible">

        <Button
            android:id="@+id/Setting"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/menu_border"
            android:text="마이페이지"
            android:textColor="#FFFFFFFF"
            android:textSize="24dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/FavoriteButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Setting"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/menu_border"
            android:text="즐겨찾기목록"
            android:textColor="#FFFFFFFF"
            android:textSize="24dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Finished"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/FavoriteButton"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/menu_border"
            android:text="지난채용공고"
            android:textColor="#FFFFFFFF"
            android:textSize="24dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/GotoMain2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Finished"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/menu_border"
            android:text="메인으로"
            android:textColor="#FFFFFFFF"
            android:textSize="24dp"
            android:textStyle="bold" />
    </RelativeLayout>

</FrameLayout>