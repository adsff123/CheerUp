<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.androidtown.cheerup.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="center"
            android:text="예정된 채용설명회"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
        <RadioGroup
            android:checkedButton="@+id/offer"
            android:id="@+id/toggle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/pink_out_line"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_widget_background"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="인사캠"
                android:textColor="#FFFFFFFF" />

            <RadioButton
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:id="@+id/offer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/toggle_widget_background"
                android:button="@null"
                android:gravity="center"
                android:checked="false"
                android:text="자과캠"
                android:textColor="#FFFFFFFF" />
        </RadioGroup>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

            </ListView>

            <ListView
                android:id="@+id/listView_Suwon"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/searchMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#77000000"
        android:orientation="horizontal"
        android:visibility="invisible">

        <EditText
            android:id="@+id/editText"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button"
            android:layout_marginEnd="9dp"
            android:layout_toStartOf="@+id/button"
            android:contextClickable="false"
            android:cursorVisible="false"
            android:hint="검색어를 입력하세요"
            android:inputType="text"
            android:linksClickable="false"
            android:textColorHint="#FFFFFFFF"
            android:textColor="#FFFFFFFF"/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="20dp"
            android:background="#FFFFFFFF"
            android:text="검색"
            android:textSize="20dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:columnCount="3"
            android:orientation="horizontal"
            android:rowCount="6"
            android:useDefaultMargins="true">

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_row="0"
                android:text="전체선택"
                android:textColor="#FFFFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="금융"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="IT"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="미디어"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="무역"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="생산·제조"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="서비스"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="유통"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="보험"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="건설"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="통신"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="외국계"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="기타"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_marginBottom="20dp"
                android:layout_row="5"
                android:background="#FFFFFFFF"
                android:text="검색"
                android:textSize="20dp" />
        </GridLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/CategoryMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#77000000"
        android:orientation="vertical"
        android:visibility="invisible">

        <Button
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/menu_border"
            android:text="마이페이지"
            android:textColor="#FFFFFFFF"
            android:textSize="24dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/FavoriteButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/menu_border"
            android:text="즐겨찾기목록"
            android:textColor="#FFFFFFFF"
            android:textSize="24dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/FavoriteButton"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/menu_border"
            android:text="지난채용공고"
            android:textColor="#FFFFFFFF"
            android:textSize="24dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/GotoMain"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button4"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/menu_border"
            android:text="메인으로"
            android:textColor="#FFFFFFFF"
            android:textSize="24dp"
            android:textStyle="bold" />
    </RelativeLayout>


</FrameLayout>
